{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="container my-5 d-flex align-items-center w-100 flex-column">
    <h1 class="h3 mb-4 text-center">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">M'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-link">J'ai déjà un compte</a>
    {{ form_end(registrationForm) }}
</main>
{% endblock %}
