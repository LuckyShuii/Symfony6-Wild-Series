{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container marketing mt-5">
        <div class="row featurette">
          <div class="col-md-7 order-md-2">
            <h1 class="mt-0">{{ program.title }}</h1>
            {{ include('/components/_button_all_series.html.twig') }}
            <hr>
            <p>{{ program.synopsis }}</p>
            <p>Cat√©gorie : {{ program.category.name }}</p>
            <ul>
                {% for season in program.seasons %}
                    <li>
                        <a href="{{ path('program_season_show', {'program_id': program.id, 'season_id': season.id}) }}">
                            Saison {{ season.number }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
          </div>
          <div class="col-md-5 order-md-1">
            {{ include('/components/_detail_program_image.html.twig') }}
          </div>
        </div>
    </div>
{% endblock %}