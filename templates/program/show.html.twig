{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>
                {% for season in program.seasons %}
                    <li>
                        <a href="{{ path('program_season_show', {'program_id': program.id, 'season_id': season.id}) }}">
                            Saison {{ season.number }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
    <br>
    <a href="{{ path('category_show', {'categoryName': program.category.name}) }}">
        Voir tous les programmes de cette catégorie
    </a>
{% endblock %}